---
const {title, desc, technologies, img, webSite, repository} = Astro.props;
---

<div class="flex flex-col sm:flex-row bg-white rounded-2xl sm:w-auto w-full">
  <figure class="w-80 border h-56 rounded-2xl overflow-hidden">
    <img class="object-cover" src={img} alt={title}>
  </figure>
  <div class="flex flex-col justify-between px-4 py-2 w-80 h-auto sm:h-56">
    <div class="flex flex-col gap-2 mb-8 sm:mb-0">
      <h1 class="font-bold text-xl text-black">{title}</h1>
      <p class="text-pretty text-black text-sm">{desc}</p>
      <!-- Tecnologias usadas -->
      <div class="flex gap-4">
        {technologies.map((Technologie: any) =>(
          <div class="size-6">
            <Technologie/>
          </div>
        ))}
      </div>
    </div>
    <div class="flex gap-3 pb-2 sm:pb-0">
      <a href={repository} class="py-2 px-4 sm:px-6 bg-black text-white rounded-lg text-sm sm:text-md font-bold transform transition-transform hover:scale-110 flex gap-2" target="_blank" rel="noopener">
        Repository
      </a>
      <a href={webSite} class="py-2 px-4 sm:px-6 bg-primary text-white rounded-lg text-sm sm:text-md font-bold transform transition-transform hover:scale-110" target="_blank" rel="noopener">
        View project
      </a>
    </div>
  </div>
</div>
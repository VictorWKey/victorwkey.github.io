---
import GithubWhite from "../icons/GithubWhite.jsx"
import X from '../icons/X.jsx'
import InstagramWhite from '../icons/InstagramWhite'
import FacebookWhite from '../icons/FacebookWhite.jsx'
import LinkedInWhite from "../icons/LinkedInWhite.jsx"
---

<footer class="w-full py-12 px-6 bg-[#121E30] border-t border-white/10 z-10">
  <div class="max-w-6xl mx-auto">
    <!-- Main Footer Content -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      
      <!-- Left Section - Branding -->
      <div class="flex flex-col items-center md:items-start">
        <h3 class="text-2xl font-bold text-white mb-2">Victor López</h3>
        <p class="text-gray-300 text-center md:text-left">AI Software Engineer</p>
        <p class="text-gray-400 text-sm text-center md:text-left">Building intelligent solutions for tomorrow</p>
      </div>

      <!-- Center Section - Social Links -->
      <div class="flex flex-col items-center">
        <p class="text-gray-300 mb-4 text-sm">Connect with me</p>
        <div class="flex gap-4">
          <a 
            href="https://github.com/VictorWKey" 
            target="_blank" 
            rel="noopener"
            class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-full p-3 hover:bg-white/20 hover:scale-110 transition-all duration-200 group"
          >
            <div class="size-5 group-hover:scale-110 transition-transform duration-200">
              <GithubWhite/>
            </div>
          </a>
          <a 
            href="https://www.linkedin.com/in/victor-angel-lopez-romero-556605245/" 
            target="_blank" 
            rel="noopener"
            class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-full p-3 hover:bg-white/20 hover:scale-110 transition-all duration-200 group"
          >
            <div class="size-5 group-hover:scale-110 transition-transform duration-200">
              <LinkedInWhite/>
            </div>
          </a>
          <a 
            href="https://twitter.com/victorwkey" 
            target="_blank" 
            rel="noopener"
            class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-full p-3 hover:bg-white/20 hover:scale-110 transition-all duration-200 group"
          >
            <div class="size-5 group-hover:scale-110 transition-transform duration-200">
              <X/>
            </div>
          </a>
          <a 
            href="https://www.instagram.com/victorwkey/" 
            target="_blank" 
            rel="noopener"
            class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-full p-3 hover:bg-white/20 hover:scale-110 transition-all duration-200 group"
          >
            <div class="size-5 group-hover:scale-110 transition-transform duration-200">
              <InstagramWhite/>
            </div>
          </a>
          <a 
            href="https://www.facebook.com/profile.php?id=61557229064845" 
            target="_blank" 
            rel="noopener"
            class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-full p-3 hover:bg-white/20 hover:scale-110 transition-all duration-200 group"
          >
            <div class="size-5 group-hover:scale-110 transition-transform duration-200">
              <FacebookWhite/>
            </div>
          </a>
        </div>
      </div>

      <!-- Right Section - Contact Info -->
      <div class="flex flex-col items-center md:items-end">
        <p class="text-gray-300 text-center md:text-right">Ready to collaborate?</p>
        <a 
          href="mailto:victorwkey@gmail.com" 
          class="text-primary hover:text-primary/80 transition-colors duration-200 font-medium"
        >
          victorwkey@gmail.com
        </a>
        <p class="text-gray-400 text-sm mt-1">Guanajuato, México</p>
      </div>
    </div>

    <!-- Bottom Section - Copyright -->
    <div class="border-t border-white/10 mt-8 pt-6 text-center">
      <p class="text-gray-400 text-sm">
        © {new Date().getFullYear()} Victor López. All rights reserved. 
        <span class="text-primary">Built with passion and AI</span>
      </p>
    </div>
  </div>
</footer>
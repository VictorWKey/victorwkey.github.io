---
import ProjectCard from './ProjectCard.astro'
import JavaScript from "../icons/JavaScript";
import HTML from "../icons/HTML";
import CSS from "../icons/CSS.jsx";
import ReactLogo from "../icons/ReactLogo.jsx";

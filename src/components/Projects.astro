    description: ""
  }
}

const PROJECTS = [
  {
    title: "TODO´s App",
    desc: "Aplicación de lista de tareas donde puedes agregar, eliminar, marcar como completadas y buscar tareas pendientes.",
    technologies: [TAGS.JavaScript.logo, TAGS.HTML.logo, TAGS.CSS.logo, TAGS.React.logo],
    img: "../../img/project-todos.png",
    site: "https://victorwkey.github.io/CheckLove-TODOs-Machine/",
    repository: "https://github.com/VictorWKey/CheckLove-TODOs-Machine"
  },
  {
    title: "Fronted for e-commerce",
    desc: "Frontend de una tienda en línea con funciones completas, incluyendo órdenes, carrito de compras y filtros.",
    technologies: [TAGS.JavaScript.logo, TAGS.HTML.logo, TAGS.CSS.logo, TAGS.React.logo, TAGS.Tailwind.logo],
    img: "../../img/project-fronted.png",
    site: "https://shop-app-w-react.netlify.app/",
    repository: "https://github.com/VictorWKey/fronted-shop-react-app"
  }
]




---

<section id="projects" class="w-full h-auto sm:h-screen flex flex-col items-center pt-8 text-primary mr-">
  <h1 class="pt-8 pb-10 text-4xl font-bold z-10">Projects</h1>
  <div class="w-auto max-w-4xl flex flex-col md:flex-row gap-8 sm:gap-5 items-center justify-center z-10">
    {PROJECTS.map((project) => (
      <ProjectCard 
        title = {project.title} 
        desc = {project.desc} 
        technologies = {project.technologies} 
        webSite={project.site} 
        repository = {project.repository} 
        img={project.img}
      />
    ))}
  </div>
</section>
---
import GitHub from '../icons/GitHub.jsx'
import LinkedInWhite from '../icons/LinkedInWhite.jsx'
import Download from '../icons/Download.jsx'
import EmailWhite from '../icons/EmailWhite.jsx'
import GithubWhite from '../icons/GithubWhite.jsx'
---

<main id="top" class="w-full sm:h-screen flex justify-center items-center pt-32 sm:pt-0 px-4 sm:px-8">
  <div class="w-full max-w-xs sm:max-w-5xl flex max-sm:flex-col justify-center items-center gap-6 sm:gap-12">
    <div class="flex-shrink-0">
      <figure class="w-48 h-48 sm:w-72 sm:h-72 rounded-full border-4 border-primary overflow-hidden relative bg-gradient-to-br from-primary/20 to-primary/5 shadow-2xl shadow-primary/25">
        <img
          src="../../img/pp-official.jpeg"
          alt="Foto de Victor"
          class="object-cover w-full h-full transition-transform duration-300 hover:scale-105"
        >
      </figure>
    </div>
    <div class="flex flex-col gap-4 sm:gap-6 z-10 text-left">
      <div class="flex flex-col gap-3 sm:gap-4">
        <div class="flex gap-2 sm:gap-4 items-start flex-wrap">
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-pretty leading-tight">
            <span class="text-white">Hey, I am </span><span class="text-primary">Victor López</span>
          </h1>
          
          <div class="mt-1"><a
            href="https://www.linkedin.com/in/victor-angel-lopez-romero-556605245/'"
            class="inline-flex items-center bg-primary/20 text-primary text-xs font-semibold px-3 py-1.5 rounded-full border border-primary/30 backdrop-blur-sm hover:bg-primary/30 transition-all duration-200"
            target="_blank"
            rel="noopener"
          >
            <div class="w-2 h-2 bg-primary rounded-full mr-2 animate-pulse"></div>
            Available
          </a></div>
        </div>
      </div>
      
      <h2 class="text-xl sm:text-2xl lg:text-3xl font-semibold text-pretty text-white/90 leading-relaxed">AI Software Engineer</h2>

      <h3 class="font-light text-base sm:text-lg lg:text-xl text-pretty text-white/80 leading-relaxed max-w-2xl">From Guanajuato, México. Specialized in developing intelligent software solutions that bridge the gap between <span class="text-primary font-medium">artificial intelligence</span> and <span class="text-primary font-medium">scalable applications</span>. Expert in designing, implementing, and deploying AI-powered systems with modern software engineering practices.</h3>

      <div class="flex gap-2 sm:gap-4 flex-wrap justify-start">
        <!-- Social Links -->
        <a
          href = "https://github.com/VictorWKey"
          class="group rounded-full border border-primary/40 bg-primary/10 backdrop-blur-sm flex gap-2 py-2 px-3 sm:px-4 justify-center items-center transform transition-all duration-200 hover:scale-105 hover:bg-primary/20 hover:border-primary/60 hover:shadow-lg hover:shadow-primary/25"
          target="_blank"
          rel="noopener"
        >
          <div class="size-4 group-hover:scale-110 transition-transform duration-200">
            <GithubWhite/>
          </div>
          <p class="text-xs sm:text-sm text-white font-medium">GitHub</p>
        </a>

        <a
        href = "https://www.linkedin.com/in/victor-angel-lopez-romero-556605245/"
        class="group rounded-full border border-primary/40 bg-primary/10 backdrop-blur-sm flex gap-2 py-2 px-3 sm:px-4 justify-center items-center transform transition-all duration-200 hover:scale-105 hover:bg-primary/20 hover:border-primary/60 hover:shadow-lg hover:shadow-primary/25"
        target="_blank"
        rel="noopener"
        >
          <div class="size-4 group-hover:scale-110 transition-transform duration-200">
            <LinkedInWhite/>
          </div>
          <p class="text-xs sm:text-sm text-white font-medium">LinkedIn</p>
        </a>

        <div
        class="group rounded-full border border-primary/40 bg-primary/10 backdrop-blur-sm flex gap-2 py-2 px-3 sm:px-4 justify-center items-center transform transition-all duration-200 hover:scale-105 hover:bg-primary/20 hover:border-primary/60"
        >
          <div class="size-4 group-hover:scale-110 transition-transform duration-200">
            <EmailWhite/>
          </div>
          <p class="text-xs sm:text-sm text-white font-medium hidden sm:block">victorwkey@gmail.com</p>
          <p class="text-xs sm:text-sm text-white font-medium sm:hidden">Email</p>
        </div>

        <!-- Download CV Button -->
        <a href="https://drive.google.com/file/d/1N_u4NNxHQxmAhXspvhdTElcWujv5lAns/view?usp=sharing" class="group py-2.5 px-4 sm:px-6 bg-gradient-to-r from-primary to-primary/80 text-white rounded-full text-xs sm:text-sm font-bold transform transition-all duration-200 hover:scale-105 hover:shadow-lg hover:shadow-primary/30 flex gap-2 items-center justify-center cursor-pointer border border-primary/20" target="_blank" rel="noopener">
          <div class="size-4 group-hover:scale-110 transition-transform duration-200">
            <Download/>
          </div>
          <p>Download CV</p>
        </a>
      </div>
    </div>
  </div>
</main>


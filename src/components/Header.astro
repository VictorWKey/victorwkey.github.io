---
import LinkedInWhite from '../icons/LinkedInWhite.jsx'
import Download from '../icons/Download.jsx'
import EmailWhite from '../icons/EmailWhite.jsx'
import GithubWhite from '../icons/GithubWhite.jsx'
---

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const emailButton = document.getElementById('email-button');
    const email = 'victorwkey@gmail.com';
    
    if (emailButton) {
      emailButton.addEventListener('click', async function() {
        const textElement = emailButton.querySelector('p');
        if (!textElement) return;
        
        const originalText = textElement.textContent;
        
        try {
          await navigator.clipboard.writeText(email);
          textElement.textContent = 'Copied!';
          setTimeout(() => {
            if (textElement) textElement.textContent = originalText;
          }, 2000);
        } catch (err) {
          const textArea = document.createElement('textarea');
          textArea.value = email;
          document.body.appendChild(textArea);
          textArea.select();
          document.execCommand('copy');
          document.body.removeChild(textArea);
          textElement.textContent = 'Copied!';
          setTimeout(() => {
            if (textElement) textElement.textContent = originalText;
          }, 2000);
        }
      });
    }
  });
</script>

<main id="top" class="w-full min-h-screen flex justify-center items-center pt-28 sm:pt-0 px-6 sm:px-8 pb-8 sm:pb-0 bg-white dark:bg-gray-950">
  <div class="w-full max-w-3xl flex flex-col items-center text-center gap-6">
    
    <!-- Profile Image -->
    <figure class="w-36 h-36 sm:w-40 sm:h-40 rounded-full overflow-hidden border-2 border-gray-200 dark:border-gray-700">
      <img
        src="../../img/pp-official.jpeg"
        alt="Foto de Victor"
        class="object-cover w-full h-full"
      >
    </figure>

    <!-- Name & Badge -->
    <div class="flex flex-col items-center gap-3">
      <div class="flex items-center gap-3 flex-wrap justify-center">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white tracking-tight">
          Victor López
        </h1>
        <a
          href="https://www.linkedin.com/in/victor-l%C3%B3pez-556605245/"
          class="inline-flex items-center text-primary text-xs font-medium px-2.5 py-1 rounded-full border border-primary/30 bg-primary-50 dark:bg-primary-900/20 hover:bg-primary-100 dark:hover:bg-primary-900/30 transition-colors duration-200"
          target="_blank"
          rel="noopener"
        >
          <div class="w-1.5 h-1.5 bg-primary rounded-full mr-1.5 animate-pulse"></div>
          Available
        </a>
      </div>

      <h2 class="text-lg sm:text-xl font-medium text-gray-600 dark:text-gray-400">AI Software Engineer</h2>
    </div>

    <!-- Description -->
    <p class="text-base sm:text-lg text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl">
      From Guanajuato, México. Specialized in developing intelligent software solutions that bridge the gap between 
      <span class="text-primary font-medium">artificial intelligence</span> and 
      <span class="text-primary font-medium">scalable applications</span>.
    </p>

    <!-- Action Buttons -->
    <div class="flex gap-3 flex-wrap justify-center">
      <a
        href="https://github.com/VictorWKey"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200"
        target="_blank"
        rel="noopener"
      >
        <div class="w-4 h-4"><GithubWhite/></div>
        GitHub
      </a>

      <a
        href="https://www.linkedin.com/in/victor-l%C3%B3pez-556605245/"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200"
        target="_blank"
        rel="noopener"
      >
        <div class="w-4 h-4"><LinkedInWhite/></div>
        LinkedIn
      </a>

      <button
        id="email-button"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-200 cursor-pointer"
        title="Click to copy email"
      >
        <div class="w-4 h-4"><EmailWhite/></div>
        <p class="hidden sm:block">victorwkey@gmail.com</p>
        <p class="sm:hidden">Email</p>
      </button>

      <a 
        href="https://drive.google.com/file/d/1dHdAZFB2CBPFN6HyLsJgstCcswD44MJN/view?usp=sharing" 
        class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-blue-600 dark:bg-blue-600 text-white dark:text-white hover:bg-blue-700 dark:hover:bg-blue-700 transition-colors duration-200" 
        target="_blank" 
        rel="noopener"
      >
        <div class="w-4 h-4"><Download/></div>
        Download CV
      </a>
    </div>
  </div>
</main>
